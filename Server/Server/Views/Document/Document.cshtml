@model Server.ViewModels.DocumentViewModel
@using Newtonsoft.Json;
@using Microsoft.AspNetCore.WebUtilities;
<div id="editor">
    <form method="post">
        <p>@Html.EditorFor(m => m.Title)
        <input type="submit" value="Save" /></p>
        <p>@Html.EditorFor(m => m.Body)</p>
        @foreach(var sourceId in Model.SourceIds) {
            <input type="hidden" name="AntecedentIdBase64" value="@WebEncoders.Base64UrlEncode(sourceId)" />
        }
    </form>
</div>
<script src="https://cdn.jsdelivr.net/npm/inscrybmde@1.11.3/dist/inscrybmde.min.js"></script>
<script>
    var inscrybmde = new InscrybMDE({ element: document.getElementById("Body") });
</script>